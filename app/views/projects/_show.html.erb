  <div class="modal-dialog">
    <div class="md-content modal-content">
      <div class="modal-header">
        <button type="button" id="add-new-contact-close-top" class="close md-close" data-dismiss="modal"><i class="fa fa-times"></i></button>
        <h3 class="modal-title"><%= @project.title %></h3>
      </div>
      <div class="modal-body">
        <% if @project.project_images.any? %>
          <div id="cbp-fwslider" class="cbp-fwslider">
            <ul>
              <% @project.project_images.each do |img| %>
                <% unless img.thumb %>
                  <li><a href="#"><img src="<%= img.uri %>" /></a></li>
                <% end %>
              <% end %>
            </ul>
          </div>
          <div class="proj-body">
            <%= raw @project.body %>
          </div>
        <% else %>
          <%= raw @project.body %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn btn-dark">Close</button>
      </div>
    </div>
  </div>
<% if @project.project_images.any? %>
  <script>
    $( function() {
      $( '#cbp-fwslider' ).cbpFWSlider();
    } );
  </script>
<% end %>